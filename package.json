{
    "name": "vscode-location",
    "displayName": "File Location",
    "version": "0.0.5",
    "private": true,
    "publisher": "reallyx",
    "description": "Current file location",
    "main": "./out/extension.js",
    "repository": {
        "type": "git",
        "url": "https://github.com/yx1126/vscode-location"
    },
    "scripts": {
        "vscode:prepublish": "pnpm run build",
        "push": "vsce publish --no-dependencies",
        "build": "tsup",
        "watch:tsup": "tsup --watch",
        "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
        "lint": "eslint .",
        "lint:fix": "eslint . --fix",
        "test": "vscode-test"
    },
    "devDependencies": {
        "@reallyx/front-config": "^0.0.10",
        "@types/mocha": "^10.0.10",
        "@types/node": "20.x",
        "@types/vscode": "^1.96.0",
        "@vscode/test-cli": "^0.0.10",
        "@vscode/test-electron": "^2.4.1",
        "eslint": "^9.17.0",
        "tsup": "^8.3.5",
        "typescript": "^5.7.2"
    },
    "engines": {
        "vscode": "^1.96.0"
    },
    "icon": "resources/logo.png",
    "categories": ["Other"],
    "activationEvents": ["onStartupFinished"],
    "contributes": {
        "commands": [
            {
                "command": "reallyx.location",
                "title": "%title%",
                "icon": {
                    "dark": "resources/position-dark.svg",
                    "light": "resources/position-light.svg"
                }
            }
        ],
        "menus": {
            "editor/title": [
                {
                    "command": "reallyx.location",
                    "group": "navigation"
                }
            ],
            "view/title": [
                {
                    "command": "reallyx.location",
                    "when": "view == workbench.explorer.fileView",
                    "group": "navigation"
                }
            ]
        },
        "configuration": {
            "title": "File Location",
            "properties": {
                "vscode.location.fold.others": {
                    "type": "boolean",
                    "default": true,
                    "description": "%fold.other%"
                }
            }
        }
    }
}